<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.view.fragments.OrderFragment"
    android:id="@+id/order_fragment">

    <TextView
        android:id="@+id/order_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/order_status"
        android:textColor="#0050E0"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginStart="30dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/order_status_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/order_status_tv"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp">
    <ImageView
        android:id="@+id/order_placed_status_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/order_status_box"
        android:layout_marginTop="25dp"/>

    <ImageView
        android:id="@+id/order_placed_status_line"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_placed_status_box"
        android:src="@drawable/order_status_line"
        android:rotation="90"/>

    <TextView
        android:id="@+id/order_placed_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Order Placed"
        android:textColor="@color/black"
        app:layout_constraintStart_toEndOf="@id/order_placed_status_box"
        app:layout_constraintTop_toTopOf="@id/order_placed_status_box"
        app:layout_constraintBottom_toBottomOf="@id/order_placed_status_box"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="30dp"/>

    <ImageView
        android:id="@+id/order_picked_status_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_placed_status_line"
        android:src="@drawable/order_status_box"/>

    <ImageView
        android:id="@+id/order_picked_status_line"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_picked_status_box"
        android:src="@drawable/order_status_line"
        android:rotation="90"/>

    <TextView
        android:id="@+id/order_picked_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Order Picked"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_tv"
        app:layout_constraintTop_toTopOf="@id/order_picked_status_box"
        app:layout_constraintBottom_toBottomOf="@id/order_picked_status_box"/>

    <ImageView
        android:id="@+id/order_processing_status_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_picked_status_line"
        android:src="@drawable/order_status_box"/>

    <ImageView
        android:id="@+id/order_processing_status_line"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_processing_status_box"
        android:src="@drawable/order_status_line"
        android:rotation="90"/>

    <TextView
        android:id="@+id/order_processing_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Order Processing"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_tv"
        app:layout_constraintTop_toTopOf="@id/order_processing_status_box"
        app:layout_constraintBottom_toBottomOf="@id/order_processing_status_box"/>

    <ImageView
        android:id="@+id/order_completed_status_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_processing_status_line"
        android:src="@drawable/order_status_box"/>

    <ImageView
        android:id="@+id/order_completed_status_line"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_completed_status_box"
        android:src="@drawable/order_status_line"
        android:rotation="90"/>

    <TextView
        android:id="@+id/order_completed_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Order Completed"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_tv"
        app:layout_constraintTop_toTopOf="@id/order_completed_status_box"
        app:layout_constraintBottom_toBottomOf="@id/order_completed_status_box"/>


    <ImageView
        android:id="@+id/order_delivery_status_box"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_box"
        app:layout_constraintTop_toBottomOf="@id/order_completed_status_line"
        android:src="@drawable/order_status_box"/>

    <TextView
        android:id="@+id/order_delivered_status_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:text="Order Delivered"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="@id/order_placed_status_tv"
        app:layout_constraintTop_toTopOf="@id/order_delivery_status_box"
        app:layout_constraintBottom_toBottomOf="@id/order_delivery_status_box"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/cancel_order_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:backgroundTint="#229EFC"
            android:text="Cancel Order"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/order_delivery_status_box"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/order_status_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:indeterminate="true"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/no_order_placed_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Order Placed. Start Shopping!!"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="invisible"/>

</androidx.constraintlayout.widget.ConstraintLayout>