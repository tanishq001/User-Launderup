<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activities.AboutUsActivity">
    <RelativeLayout
        android:id="@+id/about_us_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/transparent_backgorund"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/about_us_back_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:src="@drawable/ic_baseline_arrow_back_24" />
    </RelativeLayout>

    <TextView
        android:id="@+id/about_us_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/about_us"
        android:textSize="30sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/about_us_top"
        android:layout_marginTop="40sp"
        android:layout_marginStart="30sp"
        app:layout_constraintStart_toStartOf="parent"/>


    <TextView
        android:id="@+id/about_us_textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/about_us_text"
        android:textSize="20sp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@+id/about_us_heading"
        android:layout_marginTop="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/privacy_policy_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Privacy Policy"
        app:layout_constraintTop_toBottomOf="@id/about_us_textview"
        app:layout_constraintStart_toStartOf="@id/about_us_textview"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:textColor="#0050E0"/>

    <TextView
        android:id="@+id/tnc_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Terms And Conditions"
        app:layout_constraintTop_toBottomOf="@id/privacy_policy_textview"
        app:layout_constraintStart_toStartOf="@id/privacy_policy_textview"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#0050E0"/>

    <TextView
        android:id="@+id/rate_us_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rate Us on Playstore"
        app:layout_constraintTop_toBottomOf="@id/tnc_textview"
        app:layout_constraintStart_toStartOf="@id/tnc_textview"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="#0050E0"/>

</androidx.constraintlayout.widget.ConstraintLayout>