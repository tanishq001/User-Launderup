<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.view.activities.FeedbackActivity">

    <ImageView
        android:id="@+id/feedback_top"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:src="@drawable/page_top"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/feedback_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/feedback"
        app:layout_constraintTop_toBottomOf="@+id/feedback_top"
        android:textSize="24sp"
        android:padding="20dp"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="#000000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:layout_constraintTop_toBottomOf="@id/feedback_text"
        android:hint="Write Here........"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>