<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/cart_cloth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textColor="@color/black"/>

        <TextView
            android:id="@+id/cart_cloth_rate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cart_cloth_name"
            android:textColor="@color/black"/>


        <Button
            android:id="@+id/count_decrement_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="-"
            app:layout_constraintTop_toTopOf="@id/cart_cloth_name"
            app:layout_constraintEnd_toStartOf="@id/count_tv"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_marginEnd="10dp"
            android:backgroundTint="#EDF8FF"/>

    <TextView
        android:id="@+id/count_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toStartOf="@id/count_increment_btn"
        app:layout_constraintTop_toTopOf="@id/count_increment_btn"
        app:layout_constraintBottom_toBottomOf="@id/count_increment_btn"
        android:textColor="@color/black"
        android:text="11"
        android:textSize="15sp"/>

        <Button
            android:id="@+id/count_increment_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:text="+"
            app:layout_constraintTop_toTopOf="@id/cart_cloth_name"
            app:layout_constraintEnd_toEndOf="parent"
            style="?attr/materialButtonOutlinedStyle"
            android:backgroundTint="#EDF8FF"/>


    <TextView
        android:id="@+id/cart_cloth_totalCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toTopOf="@id/cart_clothes_divider"
        app:layout_constraintEnd_toEndOf="@id/count_increment_btn"
        app:layout_constraintTop_toBottomOf="@id/count_tv"
        android:textColor="@color/black"/>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/cart_clothes_divider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/cart_cloth_totalCost"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>